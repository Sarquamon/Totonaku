<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/levelshubbackground"
    android:weightSum="10"
    tools:context=".pronombresLevel1">

    <GridLayout
        android:id="@+id/mainGrid"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="50dp"
        android:columnCount="1"
        android:padding="20dp"
        android:rowCount="1">

        <!--Row 1-->
        <!--Column 1-->
        <android.support.v7.widget.CardView
            android:id="@+id/pronombresCard1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ellos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ellos"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </android.support.v7.widget.CardView>
        <!--Column 2-->

    </GridLayout>

    <RadioGroup
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="375dp"
        >

        <RadioButton
            android:id="@+id/radio_wixin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlue"
            android:onClick="onRadioButtonClicked"
            android:text="Wixin"
            android:textSize="32dp"
            android:layout_marginBottom="5dp"
            />

        <RadioButton
            android:id="@+id/radio_akint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Akit"
            android:textSize="32dp"
            android:textColor="@color/colorBlue"
            android:layout_marginBottom="5dp"/>

        <RadioButton
            android:id="@+id/radio_xlakan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:textColor="@color/colorBlue"
            android:text="Xlakan"
            android:textSize="32dp"

            android:layout_marginBottom="5dp"/>

        <RadioButton
            android:id="@+id/radio_xla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Xla"
            android:textSize="32dp"
            android:textColor="@color/colorBlue"
            android:layout_marginBottom="5dp"/>

    </RadioGroup>

    <Button
        android:id="@+id/pronombres1Level1BackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:text="Regresar" />

    <Button
        android:id="@+id/pronombresxlakanAudioBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainGrid"
        android:layout_marginBottom="-80dp"
        android:layout_marginLeft="280dp"
        android:text="Escuchar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Â¿Que sonido hace?"
        android:textColor="@color/colorBlue"
        android:textSize="26sp" />

</RelativeLayout>